{
  "name": "remsfal-de",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p dev:app dev:docs",
    "dev:app": "vite",
    "dev:docs": "NODE_ENV=development vitepress dev docs --port 5174",
    "build": "run-s type-check build:app build:docs",
    "build:app": "vite build --mode production",
    "build:docs": "NODE_ENV=production vitepress build docs",
    "preview": "vite preview",
    "docs:preview": "NODE_ENV=development vitepress preview dist/docs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "type-check": "vue-tsc --build",
    "lint": "eslint --quiet",
    "lint:report": "mkdir -p reports && eslint --format json --output-file reports/eslint-report.json",
    "lint:fix": "eslint --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@primevue/themes": "^4.4.1",
    "dompurify": "^3.2.7",
    "dotenv": "^17.2.3",
    "markdown-it": "^14.1.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.4.1",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@primevue/auto-import-resolver": "^4.4.1",
    "@rushstack/eslint-patch": "^1.11.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/dompurify": "^3.2.0",
    "@types/jsdom": "^27.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.7.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/eslint-plugin": "1.3.17",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-plugin-vue": "^10.5.0",
    "intersection-observer": "^0.12.2",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "npm-run-all2": "^8.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "sass": "^1.93.2",
    "tailwindcss": "^4.1.13",
    "tailwindcss-primeui": "^0.6.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.9",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitepress": "^1.6.4",
    "vitest": "^3.1.3",
    "vue-tsc": "^3.1.1"
  }
